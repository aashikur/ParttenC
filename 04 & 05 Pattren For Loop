#include <stdio.h>

int main()
{
    for(int a = 1 ; a<=5; a++) // Question 4
    {
        for(int b = 1; b<=a; b++)
        {
            printf("%d",a);
        }
        printf("\n");
    }


printf("\n\n");


    for(int a = 5; a>=1; a--) // Question 5
    {
        for(int b = 1; b<=a; b++){
            printf("%d",b);
        } printf("\n");
    }

// N:B
// For 1 to 5// always Use Increment >> Increment or Decrement >> Decrement
// For 5 to 4// Always use Increment >> Decrement or Vise versa !





    return 0;
}
